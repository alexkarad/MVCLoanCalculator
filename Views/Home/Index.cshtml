@{
    ViewBag.Title = "Loan Calculator";
}

<head>
    <title>Loan Calculator</title>
    <link rel="stylesheet" type="text/css" href="../../Content/Site.css"/>

</head>

<body>
<script src="../../Scripts/CalculatorApp.js"></script>
<div class="calculator">
    <div class="input-field">
        <form id="clearMe" name="calc">
            <h2>Loan Calculator</h2>
            <label for="lamount">Loan Amount</label>
            <input type="number" id="lamount" name="lamount"><br/><br/>
            <label for="intrate">Interest Rate</label>
            <input type="number" id="intrate" name="intrate"><br/><br/>
        </form>
    </div>
    <div class="container1">
        <p>Loan Length</p>
        <p>1 Year</p>
        <p>2 Year</p>
        <p>3 Year</p>
        <p>4 Year</p>
        <p>5 Year</p>
    </div>
    <div class="container2">
        <p>Monthly Payment</p>
        <form id="clearPls" method="get">
            <input type="number" id="1" readonly />
            <input type="number" id="2" readonly />
            <input type="number" id="3" readonly />
            <input type="number" id="4" readonly />
            <input type="number" id="5" readonly />
        </form>
        <button id="clearBtn" type="button" class="btn btn-primary" onclick="clearBoxes()">Clear</button>
    </div>
    <div class="container3">
        <p>Loan Total</p>
        <form id="clearNow" method="get">
            <input type="number" id="6" readonly/>
            <input type="number" id="7" readonly/>
            <input type="number" id="8" readonly/>
            <input type="number" id="9" readonly/>
            <input type="number" id="10" readonly/>
        </form>
        <button id="calcBtn" type="button" class="btn btn-primary" onclick="calcLoan()">Calculate Loan</button>
    </div>
</div>
</body>